@model List<Contact>

@{
	ViewData["Title"] = "AdContactDetail";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@foreach (var item in Model)
{
	<div class="col-lg-12">
		<div class="card">
			<div class="card-body">

				<div class="read-content">
					<div class="media pt-5">
						<div class="media-body">
							<h5 class="m-b-3">@item.Name @item.Surname</h5>
							<p class="m-b-2">@(((DateTime)item.ContactDate).ToString("dd MMMM yyyy"))</p>
						</div>
					</div>
					<hr>
					<div class="media mb-4 mt-1">
						<div class="media-body">
							<h4 class="m-0 text-primary">@item.Subject</h4>
						</div>
					</div>
					<p>@item.Message</p>
				</div>
				<div class="text-right">
					<a class="btn btn-primary m-b-30" href="/Contact/AdContactDelete/@item.ContactId">Sil</a>
				</div>
			</div>
		</div>
	</div>
}


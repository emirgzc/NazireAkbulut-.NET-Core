@model List<MesKurUye>

@{
	ViewData["Title"] = "AdMesKurUyeList";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	int sayac = 1;
}

<div class="col-lg-12">
	<a href="/MesKurUye/AdMesKurUyeAdd/" class="btn btn-success mb-3">
		Yeni Meslek Kuruluşlara Üyelik Ekle
	</a>

	<div class="card">
		<div class="card-body">
			<div class="card-title">
				<h4>Meslek Kuruluşlara Üyelikler</h4>
			</div>
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th>#</th>
							<th>Başlık</th>
							<th>Tarih</th>
							<th>Durum</th>
							<th>Güncelle</th>
							<th>İşlem</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<th>@sayac</th>
								<td>@item.Title</td>
								<td>@item.Date</td>
								<td>
									@if (item.Status)
									{
										<span class="text-success">Aktif</span>
									}
									else
									{
										<span class="text-danger">Pasif</span>
									}
								</td>
								<td>
									<a href="/MesKurUye/AdMesKurUyeUpdate/@item.MesKurUyeId" class="btn btn-warning">Güncelle</a>
								</td>
								<td>
									@if (item.Status)
									{
										<a href="/MesKurUye/AdMesKurUyeDoFalse/@item.MesKurUyeId" class="btn btn-danger">Pasif Yap</a>
									}
									else
									{
										<a href="/MesKurUye/AdMesKurUyeDoTrue/@item.MesKurUyeId" class="btn btn-success">Aktif Yap</a>
									}
								</td>
							</tr>
							sayac++;
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>


@model EntityLayer.Concrete.MesKurUye

@{
	ViewData["Title"] = "AdMesKurUyeAdd";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
	<div class="col-lg-12">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Yeni Meslek Kuruluşlara Üyelik Ekleme</h4>
				<div class="basic-form">
					<form method="post" asp-controller="MesKurUye" asp-action="AdMesKurUyeAdd">
						<div class="form-row">
							<div class="form-group col-md-6">
								<label>Başlık</label>
								<input type="text" asp-for="Title" class="form-control" placeholder="Başlık">
							</div>
							<div class="form-group col-md-6">
								<label>Tarih</label>
								<input type="text" asp-for="Date" class="form-control" placeholder="Tarih">
							</div>
						</div>
						<div class="form-group">
							<label>Kısa Yazı</label>
							<textarea asp-for="ShortContent" class="form-control h-150px" rows="7" id="editorid"></textarea>
						</div>
						<button type="submit" class="btn btn-dark">Ekle</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script src="~/admin/theme/plugins/ckeditor/ckeditor.js"></script>
	<script>
		CKEDITOR.replace("editorid")
	</script>
}
@model MyWriteCreateModel

@{
	ViewData["Title"] = "AdMyWriteAdd";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row page-titles mx-0">
	<div class="col p-md-0">
		<ol class="breadcrumb">
			<li class="breadcrumb-item"><a href="#">Dashboard</a></li>
			<li class="breadcrumb-item active"><a href="#">Yazı Ekleme</a></li>
		</ol>
	</div>
</div>

<div class="row">
	<div class="col-lg-12">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Yazı Ekleme</h4>
				<div class="basic-form">
					<form method="post" enctype="multipart/form-data" asp-controller="MyWrite" asp-action="AdMyWriteAdd">
						<div class="form-row">
							<div class="form-group col-md-12">
								<label>Yazı Başlık</label>
								<input type="text" asp-for="Title" class="form-control" placeholder="Yazı Başlık">
							</div>
							<div class="form-group col-md-12">
								<label>Yazı Etiketleri</label>
								<input type="text" asp-for="Tags" class="form-control" placeholder="YAZI ETİKETLERİNİ ARALARINDA VİRGÜL KOYARAK YAZINIZ.">
							</div>
						</div>
						<div class="form-row">
							<div class="form-group col-md-6">
								@Html.Label("Kategori")
								@Html.DropDownListFor(x => x.CategoriId, (List<SelectListItem>)ViewBag.catValue, new { @class = "form-control" })
							</div>
							<div class="form-group col-md-6">
								@Html.Label("Yazar")
								@Html.DropDownListFor(x => x.WriterId, (List<SelectListItem>)ViewBag.writValue, new { @class = "form-control" })
							</div>
						</div>
						<div class="form-group">
							<label>Yazı İçeriği</label>
							<textarea asp-for="Description" class="form-control h-150px" rows="15" id="editorid"></textarea>
						</div>
						<div class="form-group">
							<label>Yazı Resim</label>
							<div class="input-group">
								<div class="custom-file">
									<input type="file" asp-for="Image" class="custom-file-input">
									<label class="custom-file-label">Resim Seç</label>
								</div>
							</div>
						</div>
						<button type="submit" class="btn btn-dark">Ekle</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>



@section Scripts {
	<script src="~/admin/theme/plugins/ckeditor/ckeditor.js"></script>
	<script>
		CKEDITOR.replace("editorid")
	</script>
}
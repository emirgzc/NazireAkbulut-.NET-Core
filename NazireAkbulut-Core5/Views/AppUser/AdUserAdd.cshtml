
@model UserRegisterViewModel

@{
    ViewData["Title"] = "AdUserAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
	<div class="col-lg-12">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Admin Ekleme</h4>
				<div class="basic-form">
					<form method="post">
						<div class="form-row">
							<div class="form-group col-md-6">
								<label>İsim</label>
								<input type="text" asp-for="Name" class="form-control" placeholder="İsim" required>
								<span class="text-danger" asp-validation-for="Name"></span>
							</div>
							<div class="form-group col-md-6">
								<label>Soyisim</label>
								<input type="text" asp-for="Surname" class="form-control" placeholder="Soyisim">
								<span class="text-danger" asp-validation-for="Surname"></span>
							</div>
						</div>
						<div class="form-row">
							<div class="form-group col-md-6">
								<label>Mail Adresi</label>
								<input type="text" asp-for="Mail" class="form-control" placeholder="Mail Adresi">
								<span class="text-danger" asp-validation-for="Mail"></span>
							</div>
							<div class="form-group col-md-6">
								<label>Kullanıcı Adı</label>
								<input type="text" asp-for="Username" class="form-control" placeholder="Kullanıcı Adı">
								<span class="text-danger" asp-validation-for="Username"></span>
							</div>
						</div>
						<div class="form-row">
							<div class="form-group col-md-6">
								<label>Şifre</label>
								<input type="password" asp-for="Password" class="form-control" placeholder="Şifre">
								<span class="text-danger" asp-validation-for="Password"></span>
							</div>
							<div class="form-group col-md-6">
								<label>Şifre Tekrar</label>
								<input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Şifre Tekrar">
								<span class="text-danger" asp-validation-for="ConfirmPassword"></span>
							</div>
						</div>
						<button type="submit" class="btn btn-dark">Ekle</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
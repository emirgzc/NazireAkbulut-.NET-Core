@model EntityLayer.Concrete.FileType

@{
    ViewData["Title"] = "AdFileTypeUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
	<div class="col-lg-12">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Dosya Tipi Güncelleme</h4>
				<div class="basic-form">
					<form method="post" asp-controller="FileType" asp-action="AdFileTypeUpdate">
						<input type="hidden" asp-for="FileTypeId">
						<div class="form-row">
							<div class="form-group col-md-12">
								<label>Dosya Tipi Başlık</label>
								<input type="text" asp-for="FileTypeTitle" class="form-control" placeholder="Dosya Tipi Başlık">
							</div>
						</div>
						<button type="submit" class="btn btn-dark">Güncelle</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
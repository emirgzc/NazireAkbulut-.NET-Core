
@model AboutUpdateModel

@{
    ViewData["Title"] = "AdAboutUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
	<div class="col-lg-12">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Hakkımda Sayfası Güncelleme</h4>
				<div class="basic-form">
					<form method="post" enctype="multipart/form-data" asp-controller="About" asp-action="AdAboutUpdate">
						<input type="hidden" asp-for="AboutId">
						<div class="form-row">
							<div class="form-group col-md-12">
								<label>Hakkımda Başlık</label>
								<input type="text" asp-for="AboutTitle" class="form-control" placeholder="Hakkımda Başlık">
							</div>
						</div>
						<div class="form-group">
							<label>Hakkımda Yazısı</label>
							<textarea asp-for="AboutDescription" class="form-control h-150px" rows="15" id="editorid"></textarea>
						</div>
						<div class="form-group">
							<label>Hakkımda Resim</label>
							<div class="input-group">
								<div class="custom-file">
									<input type="file" asp-for="AboutImage" class="custom-file-input">
									<label class="custom-file-label">Resim Seç</label>
								</div>
							</div>
						</div>
						<button type="submit" class="btn btn-dark">Güncelle</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script src="~/admin/theme/plugins/ckeditor/ckeditor.js"></script>
	<script>
		CKEDITOR.replace("editorid")
	</script>
}
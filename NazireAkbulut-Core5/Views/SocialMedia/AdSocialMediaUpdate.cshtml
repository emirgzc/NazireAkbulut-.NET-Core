@model EntityLayer.Concrete.SocialMedia

@{
    ViewData["Title"] = "AdSocialMediaUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
	<div class="col-lg-12">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Sosyal Medya Güncelleme</h4>
				<div class="basic-form">
					<form method="post" asp-controller="SocialMedia" asp-action="AdSocialMediaUpdate">
						<input type="hidden" asp-for="SocialMediaId">
						<div class="form-row">
							<div class="form-group col-md-6">
								<label>Sosyal Medya Link</label>
								<input type="text" asp-for="Link" class="form-control" placeholder="Sosyal Medya Link">
							</div>
							<div class="form-group col-md-6">
								<label>Sosyal Medya Icon</label>
								<input type="text" asp-for="Icon" class="form-control" placeholder="Sosyal Medya Icon">
							</div>
						</div>
						<button type="submit" class="btn btn-dark">Güncelle</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

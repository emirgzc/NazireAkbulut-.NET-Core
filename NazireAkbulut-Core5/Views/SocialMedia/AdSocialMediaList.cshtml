@model List<SocialMedia>

@{
	ViewData["Title"] = "AdSocialMediaList";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	int sayac = 1;
}

<div class="col-lg-12">
	<a href="/SocialMedia/AdSocialMediaAdd/" class="btn btn-success mb-3">Yeni Sosyal Medya Ekle</a>

	<div class="card">
		<div class="card-body">
			<div class="card-title">
				<h4>Sosyal Medya Hesapları</h4>
			</div>
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th>#</th>
							<th>Sosyal Medya Ikon</th>
							<th>Sosyal Medya Link</th>
							<th>Sosyal Medya Durumu</th>
							<th>Güncelle</th>
							<th>İşlem</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<th>@sayac</th>
								<td>@item.Icon</td>
								<td>@item.Link</td>
								<td>
									@if (item.Status)
									{
										<span class="text-success">Aktif</span>
									}
									else
									{
										<span class="text-danger">Pasif</span>
									}
								</td>
								<td>
									<a href="/SocialMedia/AdSocialMediaUpdate/@item.SocialMediaId" class="btn btn-warning">Güncelle</a>
								</td>
								<td>
									@if (item.Status)
									{
										<a href="/SocialMedia/AdSocialMediaDoFalse/@item.SocialMediaId" class="btn btn-danger">Pasif Yap</a>
									}
									else
									{
										<a href="/SocialMedia/AdSocialMediaDoTrue/@item.SocialMediaId" class="btn btn-success">Aktif Yap</a>
									}
								</td>
							</tr>
							sayac++;
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>


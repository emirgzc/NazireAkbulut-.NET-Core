@model List<MyWrite>

<div class="section-header">
	<h3 class="section-title">Son Yazılarım</h3>
	<img src="~/katen/html/images/wave.svg" class="wave" alt="Nazire Akbulut" />
</div>

<div class="padding-30 rounded bordered">

	<div class="row">

		@foreach (var item in Model)
		{
			<div class="col-md-12 col-sm-6">
				<!-- post -->
				<div class="post post-list clearfix">
					<div class="thumb rounded">
						<span class="post-format-sm">
							<i class="icon-picture"></i>
						</span>
						<a href="/MyWrite/MyWriteDetail/@item.MyWriteId">
							<div class="inner">
								<img src="@item.Image" alt="Nazire Akbulut" style="height:200px; width:300px; object-fit:cover; border-radius:10px;" />
							</div>
						</a>
					</div>
					<div class="details">
						<ul class="meta list-inline mb-3">
							<li class="list-inline-item">
								<a href="/Writer/Index/@item.WriterId">
									<img src="@item.Writer.Image" class="author" alt="Nazire Akbulut" style="height:25px; width:25px; object-fit:cover; border-radius:50px;" />
									@item.Writer.Name @item.Writer.Surname
								</a>
							</li>
							<li class="list-inline-item">
								<a href="/MyWrite/Index/@item.CategoriId">@item.Categori.CategoriTitle</a>
							</li>
							<li class="list-inline-item">@(((DateTime)item.AddDate).ToString("dd MMMM yyyy"))</li>
						</ul>

						<h5 class="post-title">
							<a href="/MyWrite/MyWriteDetail/@item.MyWriteId">@item.Title</a>
						</h5>

					</div>
				</div>
			</div>
		}

	</div>

</div>
@model List<MyWrite>

<div aria-labelledby="recent-tab" class="tab-pane fade" id="recent" role="tabpanel">
	@foreach (var item in Model)
	{
		<div class="post post-list-sm circle">
			<div class="thumb rounded">
				<a href="/MyWrite/MyWriteDetail/@item.MyWriteId">
					<div class="inner">
						<img src="@item.Image" alt="Nazire Akbulut" style="height:60px; width:60px; object-fit:cover; border-radius:10px;" />
					</div>
				</a>
			</div>
			<div class="details clearfix">
				<h6 class="post-title my-0">
					<a href="/MyWrite/MyWriteDetail/@item.MyWriteId">@item.Title</a>
				</h6>
				<ul class="meta list-inline mt-1 mb-0">
					<li class="list-inline-item">
						@(((DateTime)item.AddDate).ToString("dd MMMM yyyy"))
					</li>
				</ul>
			</div>
		</div>
	}
</div>
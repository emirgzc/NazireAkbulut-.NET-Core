
@model List<Comment>

<div class="section-header">
	<h3 class="section-title">Yorumlar (@Model.Count)</h3>
	<img src="~/katen/html/images/wave.svg" class="wave" alt="Nazire Akbulut" />
</div>
<!-- post comments -->
<div class="comments bordered padding-30 rounded">
	<ul class="comments">
		<!-- comment item -->
		
		@if (Model.Count!=0)
		{
			@foreach (var item in Model)
			{
				<li class="comment rounded">
					<div class="details">
						<h4 class="name"><a href="#">@item.Name @item.Surname</a></h4>
						<span class="date">
							@(((DateTime)item.CommentDate).ToString("dd MMMM yyyy"))
							</span>
						<p>@item.Content</p>
					</div>
				</li>
			}

		}
		else
		{
			<li class="comment rounded">
				<div class="details">
					<h4 class="name" style="color:darkgrey">Henüz Yapılmış Yorum Yok</h4>					
				</div>
			</li>
		}

	</ul>
</div>
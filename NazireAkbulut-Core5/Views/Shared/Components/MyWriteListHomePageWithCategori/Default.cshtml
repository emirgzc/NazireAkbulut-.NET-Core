@model List<MyWrite>


@if (Model.Count != 0)
{
	<div class="section-header">
		<h3 class="section-title">@Model[0].Categori.CategoriTitle</h3>
		<img src="~/katen/html/images/wave.svg" class="wave" alt="Nazire Akbulut" />
	</div>

	<div class="padding-30 rounded bordered">
		<div class="row gy-5">
			<div class="@(Model.Count > 1 ? "col-sm-6" : "col-sm-12")">
				<!-- post -->
				<div class="post">
					<div class="thumb rounded">
						<a href="/MyWrite/Index/@Model[0].CategoriId" class="category-badge position-absolute">@Model[0].Categori.CategoriTitle</a>
						<span class="post-format">
							<i class="icon-picture"></i>
						</span>
						<a href="/MyWrite/MyWriteDetail/@Model[0].MyWriteId">
							<div class="inner">
								<img src="@Model[0].Image" alt="Nazire Akbulut" style="height:230px; width:-webkit-fill-available; object-fit:cover; border-radius:10px;" />
							</div>
						</a>
					</div>
					<ul class="meta list-inline mt-4 mb-0">
						<li class="list-inline-item">
							<a href="/Writer/Index/@Model[0].WriterId">
								<img src="@Model[0].Writer.Image" class="author" alt="Nazire Akbulut" style="height:30px; width:30px; object-fit:cover; border-radius:50px;" />@Model[0].Writer.Name @Model[0].Writer.Surname
							</a>
						</li>
						<li class="list-inline-item">@(((DateTime)Model[0].AddDate).ToString("dd MMMM yyyy"))</li>
					</ul>
					<h5 class="post-title mb-3 mt-3">
						<a href="/MyWrite/MyWriteDetail/@Model[0].MyWriteId">@Model[0].Title</a>
					</h5>
				</div>
			</div>

			<div class="col-sm-6">

				@if (Model.Count > 1)
				{
					@for (int i = 1; i < Model.Count; i++)
					{
						<div class="post post-list-sm square">
							<div class="thumb rounded">
								<a href="/MyWrite/MyWriteDetail/@Model[i].MyWriteId">
									<div class="inner">
										<img src="@Model[i].Image" alt="Nazire Akbulut" style="height:78px; width:100px; object-fit:cover;" />
									</div>
								</a>
							</div>
							<div class="details clearfix">
								<h6 class="post-title my-0">
									<a href="/MyWrite/MyWriteDetail/@Model[i].MyWriteId">@Model[i].Title</a>
								</h6>
								<ul class="meta list-inline mt-1 mb-0">
									<li class="list-inline-item">@(((DateTime)Model[i].AddDate).ToString("dd MMMM yyyy"))</li>
								</ul>
							</div>
						</div>
					}
				}

			</div>
		</div>
	</div>


}

@model List<MyWrite>

<div class="post featured-post-lg">
	@foreach (var item in Model)
	{
		<div class="details clearfix">
			<a href="/MyWrite/Index/@item.CategoriId" class="category-badge">@item.Categori.CategoriTitle</a>
			<h2 class="post-title"><a href="/MyWrite/MyWriteDetail/@item.MyWriteId">@item.Title</a></h2>
			<ul class="meta list-inline mb-0">
				<li class="list-inline-item"><a href="/Writer/Index/@item.WriterId">@item.Writer.Name @item.Writer.Surname</a></li>
				<li class="list-inline-item">@(((DateTime)item.AddDate).ToString("dd MMMM yyyy"))</li>
			</ul>
		</div>
		<a href="/MyWrite/MyWriteDetail/@item.MyWriteId">
			<div class="thumb rounded">
				<div class="inner data-bg-image" data-bg-image="@item.Image" style="object-fit:cover;"></div>
			</div>
		</a>
	}
</div>
@model List<MyWrite>

@if (Model.Count != 0)
{
	<div class="widget rounded">
		<div class="widget-header text-center">
			<h3 class="widget-title">@Model[0].Categori.CategoriTitle</h3>
			<img src="~/katen/html/images/wave.svg" class="wave" alt="Nazire Akbulut" />
		</div>
		<div class="widget-content">
			<div class="post-carousel-widget">
				<!-- post -->
				@foreach (var item in Model)
				{
					<div class="post post-carousel">
						<div class="thumb rounded">
							<a href="/MyWrite/Index/@item.CategoriId" class="category-badge position-absolute">@item.Categori.CategoriTitle</a>
							<a href="/MyWrite/MyWriteDetail/@item.MyWriteId">
								<div class="inner">
									<img src="@item.Image" alt="Nazire Akbulut" style="height:230px; width:-webkit-fill-available; object-fit:cover; " />
								</div>
							</a>
						</div>
						<h5 class="post-title mb-0 mt-4">
							<a href="/MyWrite/MyWriteDetail/@item.MyWriteId">@item.Title</a>
						</h5>
						<ul class="meta list-inline mt-2 mb-0">
							<li class="list-inline-item"><a href="/Writer/Index/@item.WriterId">@item.Writer.Name @item.Writer.Surname</a></li>
							<li class="list-inline-item">@(((DateTime)item.AddDate).ToString("dd MMMM yyyy"))</li>
						</ul>
					</div>
				}
			</div>
			<!-- carousel arrows -->
			<div class="slick-arrows-bot">
				<button type="button" data-role="none" class="carousel-botNav-prev slick-custom-buttons" aria-label="Previous"><i class="icon-arrow-left"></i></button>
				<button type="button" data-role="none" class="carousel-botNav-next slick-custom-buttons" aria-label="Next"><i class="icon-arrow-right"></i></button>
			</div>
		</div>
	</div>
}

@model List<Writer>

<div class="widget rounded">
	<div class="widget-about data-bg-image text-center" data-bg-image="/katen/html/images/map-bg.png">
		<img src="~/katen/html/images/logo/logo.jpeg" alt="Nazire Akbulut" class="mb-4" style="width:85px; height:40px; object-fit:cover;" />

		@foreach (var item in Model)
		{
			<p class="mb-4">@Html.Raw(item.ShortTrailer)</p>
		}

		@await Component.InvokeAsync("SocialMediaListForPublic")
	</div>
</div>
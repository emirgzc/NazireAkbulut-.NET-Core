@model List<MyWrite>

@if (Model.Count != 0)
{
	<div class="section-header">
		<h3 class="section-title">@Model[0].Categori.CategoriTitle</h3>
		<img src="~/katen/html/images/wave.svg" class="wave" alt="Nazire Akbulut" />
		<div class="slick-arrows-top">
			<button type="button" data-role="none" class="carousel-topNav-prev slick-custom-buttons" aria-label="Previous"><i class="icon-arrow-left"></i></button>
			<button type="button" data-role="none" class="carousel-topNav-next slick-custom-buttons" aria-label="Next"><i class="icon-arrow-right"></i></button>
		</div>
	</div>

	<div class="row post-carousel-twoCol post-carousel">

		@foreach (var item in Model)
		{
			<div class="post post-over-content col-md-6">
				<div class="details clearfix">
					<a href="/MyWrite/Index/@item.CategoriId" class="category-badge">@item.Categori.CategoriTitle</a>
					<h4 class="post-title">
						<a href="/MyWrite/MyWriteDetail/@item.MyWriteId">@item.Title</a>
					</h4>
					<ul class="meta list-inline mb-0">
						<li class="list-inline-item">
							<a href="/Writer/Index/@item.WriterId">@item.Writer.Name @item.Writer.Surname</a>
						</li>

						<li class="list-inline-item">
							@(((DateTime)item.AddDate).ToString("dd MMMM yyyy"))

						</li>
					</ul>
				</div>
				<a href="/MyWrite/MyWriteDetail/@item.MyWriteId">
					<div class="thumb rounded">
						<div class="inner">
							<img src="@item.Image" alt="Nazire Akbulut" style="height:300px; width:-webkit-fill-available; object-fit:cover;" />
						</div>
					</div>
				</a>
			</div>
		}

	</div>
}



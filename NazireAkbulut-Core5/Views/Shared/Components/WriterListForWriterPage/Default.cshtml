

@model List<Writer>

@foreach (var item in Model)
{
	<header class="header-personal light">
		<div class="container-xl header-top">
			<div class="row align-items-center">

				<div class="col-4 d-none d-md-block d-lg-block">
					<!-- social icons -->
					@await Component.InvokeAsync("SocialMediaListForPublic")
				</div>

				<div class="col-md-4 col-sm-12 col-xs-12 text-center">
					<!-- site logo -->
					<a class="navbar-brand" href="/Default/Index/">
						<img src="@item.Image" alt="Nazire Akbulut" style="height:90px; width:90px; object-fit:cover; border-radius:50px;" />
						</a>
					<a href="/Default/Index/" class="d-block text-logo">@item.Name<span class="dot">.</span></a>
				</div>

				<div class="col-md-4 col-sm-12 col-xs-12">
					<!-- header buttons -->
					<div class="header-buttons float-md-end mt-4 mt-md-0">
						@* <button class="search icon-button">
							<i class="icon-magnifier"></i>
						</button> *@
						<button class="burger-menu icon-button ms-2 float-end float-md-none">
							<span class="burger-icon"></span>
						</button>
					</div>
				</div>

			</div>
		</div>

	</header>

	<!-- section hero -->
	<section class="hero data-bg-image d-flex align-items-center" data-bg-image="/katen/html/images/projeresim/images3.jpeg">
		<div class="container-xl">
			<!-- call to action -->
			<div class="cta text-center">
				<h2 class="mt-0 mb-4">@item.Name @item.Surname</h2>
				<p class="mt-0 mb-4">@Html.Raw(item.ShortTrailer)</p>

				<a href="/About/Index/" class="btn btn-light mt-2">Hakkımda</a>
			</div>
		</div>
		<!-- animated mouse wheel -->
		<span class="mouse">
			<span class="wheel"></span>
		</span>
		<!-- wave svg -->
		<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 260"><path fill="#FFF" fill-opacity="1" d="M0,256L60,245.3C120,235,240,213,360,218.7C480,224,600,256,720,245.3C840,235,960,181,1080,176C1200,171,1320,213,1380,234.7L1440,256L1440,320L1380,320C1320,320,1200,320,1080,320C960,320,840,320,720,320C600,320,480,320,360,320C240,320,120,320,60,320L0,320Z"></path></svg>
	</section>
}
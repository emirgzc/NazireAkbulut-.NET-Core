@model List<YukLisDokJuri>

@{
	ViewData["Title"] = "AdYukLisDokJuriList";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	int sayac = 1;
}

<div class="col-lg-12">
	<a href="/YukLisDokUye/AdYukLisDokJuriAdd/" class="btn btn-success mb-3">
		Yüksek Lisans ve Doktora Juriliği Ekle
	</a>

	<div class="card">
		<div class="card-body">
			<div class="card-title">
				<h4>Yüksek Lisans ve Doktora Juriliği</h4>
			</div>
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th>#</th>
							<th>Başlık</th>
							<th>Alt Başlık</th>
							<th>Durum</th>
							<th>Güncelle</th>
							<th>İşlem</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<th>@sayac</th>
								<td>@item.Title</td>
								<td>@item.Subtitle</td>
								<td>
									@if (item.Status)
									{
										<span class="text-success">Aktif</span>
									}
									else
									{
										<span class="text-danger">Pasif</span>
									}
								</td>
								<td>
									<a href="/YukLisDokUye/AdYukLisDokJuriUpdate/@item.YukLisDokJuriId" class="btn btn-warning">Güncelle</a>
								</td>
								<td>
									@if (item.Status)
									{
										<a href="/YukLisDokUye/AdYukLisDokJuriDoFalse/@item.YukLisDokJuriId" class="btn btn-danger">Pasif Yap</a>
									}
									else
									{
										<a href="/YukLisDokUye/AdYukLisDokJuriDoTrue/@item.YukLisDokJuriId" class="btn btn-success">Aktif Yap</a>
									}
								</td>
							</tr>
							sayac++;
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
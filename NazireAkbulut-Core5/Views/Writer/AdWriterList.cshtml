@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@model IPagedList<Writer>

@{
    ViewData["Title"] = "AdWriterList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
	int sayac = 1;
}

<div class="col-lg-12">
	<a href="/Writer/AdWriterAdd/" class="btn btn-success mb-3">Yeni Yazar Ekle</a>
	<div class="card">
		<div class="card-body">
			<div class="card-title">
				<h4>Yazarlar</h4>
			</div>
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th>#</th>
							<th>Yazar Resim</th>
							<th>Yazar İsim Soyisim</th>							
							<th>Güncelle</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<th>@sayac</th>
								<td>
									<img src="@item.Image" style="height:45px; width:60px; object-fit:cover; border-radius:10px;" />
								</td>
								<td>@item.Name @item.Surname</td>
								<td>
									<a href="/Writer/AdWriteUpdate/@item.WriterId" class="btn btn-warning">Güncelle</a>
								</td>
							</tr>
							sayac++;
						}
					</tbody>
				</table>
			</div>
			<div class="bootstrap-pagination">
				@* pagination *@
				<nav>
					<ul class="pagination justify-content-center">
						@Html.PagedListPager((IPagedList)Model, page => Url.Action("AdWriterList", new { page = page }),
															new PagedListRenderOptions
						{
							LiElementClasses = new string[] { "page-item" },
							PageClasses = new string[] { "page-link" }
						})
					</ul>
				</nav>
			</div>
		</div>
	</div>
</div>

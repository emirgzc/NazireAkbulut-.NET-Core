
@model EntityLayer.Concrete.Categori

@{
    ViewData["Title"] = "AdCategoryAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
	<div class="col-lg-12">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Kategori Ekleme</h4>
				<div class="basic-form">
					<form method="post" asp-controller="Category" asp-action="AdCategoryAdd">
						<div class="form-row">
							<div class="form-group col-md-12">
								<label>Kategori Başlık</label>
								<input type="text" asp-for="CategoriTitle" class="form-control" placeholder="Kategori Başlık">
							</div>
						</div>
						<button type="submit" class="btn btn-dark">Ekle</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>



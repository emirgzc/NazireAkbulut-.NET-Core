@model EntityLayer.Concrete.SiteSetting

@{
    ViewData["Title"] = "AdSiteSettingUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
	<div class="col-lg-12">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Site Ayarları Güncelleme</h4>
				<div class="basic-form">
					<form method="post" asp-controller="SiteSetting" asp-action="AdSiteSettingUpdate">
						<input type="hidden" asp-for="SiteSettingId">
						<div class="form-row">
							<div class="form-group col-md-3">
								<label>Mail Adresi</label>
								<input type="text" asp-for="EmailAddress" class="form-control" placeholder="Mail Adresi">
							</div>
							<div class="form-group col-md-3">
								<label>Telefon Numarası</label>
								<input type="text" asp-for="Phone" class="form-control" placeholder="Telefon Numarası">
							</div>
							<div class="form-group col-md-3">
								<label>Şehir</label>
								<input type="text" asp-for="City" class="form-control" placeholder="Şehir">
							</div>
							<div class="form-group col-md-3">
								<label>Ülke</label>
								<input type="text" asp-for="Country" class="form-control" placeholder="Ülke">
							</div>
						</div>
						<button type="submit" class="btn btn-dark">Güncelle</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

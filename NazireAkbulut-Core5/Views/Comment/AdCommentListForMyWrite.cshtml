@model List<Comment>

@{
    ViewData["Title"] = "AdCommentListForMyWrite";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 1;
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="card-title">
                <h4>Yorumlar</h4>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Ad Soyad</th>
                            <th>Tarih</th>
                            <th>Mail Adresi</th>
                            <th>Yazı</th>
                            <th>Yorum</th>
                            <th>Yorum Durumu</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@sayac</th>
                                <td>@item.Name @item.Surname</td>
                                <td>@(((DateTime)item.CommentDate).ToString("dd MMMM yyyy"))</td>
                                <td>@item.Email</td>
                                <td>@item.MyWrite.Title</td>
                                <td>@item.Content</td>
                                <td>
                                    @if (item.Status)
                                    {
                                        <span class="text-success">Yayında</span>
                                    }
                                    else
                                    {
                                        <span class="text-danger">Pasif</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Status)
                                    {
                                        <a href="/Comment/AdCommentDoFalse/@item.CommentId" class="btn btn-danger">Yorumu Kaldır</a>
                                    }
                                    else
                                    {
                                        <a href="/Comment/AdCommentDoTrue/@item.CommentId" class="btn btn-success">Yorumu Yayınla</a>
                                    }
                                </td>
                            </tr>
                            sayac++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

